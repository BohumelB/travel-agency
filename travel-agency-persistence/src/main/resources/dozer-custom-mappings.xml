<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <!--Ignore Duration from Java 8, because Dozer is not able to map it.-->
    <!--We are mapping Duration manually on fasade layer because of this.-->
    <mapping>
        <class-a>cz.fi.muni.pa165.travelagency.entity.Excursion</class-a>
        <class-b>cz.fi.muni.pa165.travelagency.dto.ExcursionDTO</class-b>
        <field-exclude>
            <a>duration</a>
            <b>duration</b>
        </field-exclude>
    </mapping>

</mappings>